{ "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "new-cap": [2, { "capIsNewExceptions": ["List", "Map", "Set"] }],
    "react/no-multi-comp": 0,
    "import/default": 0,
    "import/no-duplicates": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-unresolved": 0,
    "import/no-named-as-default": 2,
    "comma-dangle": 0,  // not sure why airbnb turned this on. gross!
    "indent": [0],
    "no-console": 0,
    "no-alert": 0,
    "prefer-const": 0,
    "no-unused-vars": 0,
    "id-length": 0,
    "quotes": 0,
    "no-undef": 0,
    "no-multi-spaces": 0,
    "eol-last": 0,
    "no-lone-blocks": 0,
    "space-infix-ops": 0,
    "no-else-return": 0,
    "func-names": 0,
  },
  "plugins": [
    "react", "import"
  ],

  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true,
    "socket": true,
    "webpackIsomorphicTools": true
  }
}
